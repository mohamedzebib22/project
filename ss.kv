<StartScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding:10,10
            spacing: 20,20
            Image:
                source:'qu.png'
                pos:self.pos
                size: root.size
            RelativeLayout:
                Button:    #القران الكريم
                    id:b1
                    text:root.bidi_text2
                    font_name: 'Shoroq-Font.ttf'
                    font_size:18
                    on_press:
                        app.root.current='quran_book'
                    size_hint:.65,.2
                    pos_hint:{'center_x':.5,'center_y':.9}
                Button:      #كتاب السنة النبوية
                    id:b2
                    text:root.bidi_text3
                    font_name: 'Shoroq-Font.ttf'
                    font_size:18
                    on_press:
                        app.root.current="sona_book_screen"
                    size_hint:.65,.2
                    pos_hint:{'center_x':.5,'center_y':.6}
                Button:      #المسبحة الرقمية
                    id:b3
                    text:root.bidi_text4
                    font_name: 'Shoroq-Font.ttf'
                    font_size:18
                    on_press:
                        app.root.current='masbaha_page'
                    size_hint:.65,.2
                    pos_hint:{'center_x':.5,'center_y':.3}


        GridLayout:
            cols:1
            rows:2
            

            Label:
                id:lb 
                halign:'center'
                text:root.bidi_text5
                font_name: 'Shoroq-Font.ttf'
               
            Label:
                id:lbb
                
                text:root.bidi_text6
                font_name: 'Shoroq-Font.ttf'


<MasbahaPage>:
    GridLayout:
        cols:1
        rows:6
        Button:
            id:b4
            text:root.bidi_text7
            font_name: 'Shoroq-Font.ttf'
            font_size:20
            on_press:
                app.root.current='start_screen'
            size_hint:.2,None
            height:80
            pos_hint:{'center_x':.5,'center_y':.9}
            opacity:1 if self.state == 'normal' else 0.5

        Image:
            source:'main-logo.png'
            pos:self.pos
            size:root.size
        RelativeLayout:
            Label:
                text:root.bidi_text8
                font_name: 'Shoroq-Font.ttf'
                font_size:20
                pos_hint:{'center_x':.5 , 'center_y':.95}
            Label:
                id:mylabel
                text:"0"
                font_name: 'Shoroq-Font.ttf'
                font_size:20
                pos_hint:{'center_x':.5 , 'center_y':.95}
            Button:
                id:b5
                text:root.bidi_text9
                font_name: 'Shoroq-Font.ttf'
                font_size:20
                on_press:root.n_plus()
                size_hint:1,None
                height:80
                pos_hint:{'center_x':.5 , 'center_y':.5}
                

            Button:
                id:b6
                text:root.bidi_text10
                font_name: 'Shoroq-Font.ttf'
                font_size:20
                on_press:root.zero()
                size_hint:1,None
                height:80
                pos_hint:{'center_x':.5 , 'center_y':.1}
                
                

<Quranbook>:
    GridLayout:
        cols:1
        rows:6
        spacing: 15,15
        Button:
            id:b7
            text:root.bidi_text11
            font_name: 'Shoroq-Font.ttf'
            font_size:20
            on_press:
                app.root.current='start_screen'
            size_hint:1,None
            height:80
            
            opacity:1 if self.state == 'normal' else 0.5
            background_color:.2,.1,.8,.7

        Image:
            id:myimage
            pos:self.pos
            size:root.size
            source:'quran.jpg'

        RelativeLayout:
            Label:
                text:root.bidi_text12
                font_size:20
                font_name: 'Shoroq-Font.ttf'
                pos_hint:{'center_x':.5,'center_y':.95}
                underline:True

            Button:
                text:root.bidi_text13
                on_press:root.read()
                size_hint:1,None
                height:80
                pos_hint:{'center_x':.5,'center_y':.5}
                font_name: 'Shoroq-Font.ttf'


<SonaBookScfreen>:
    GridLayout:
        colsL:1
        rows:6
        spacing:15,15

        Button:
            text:root.bidi_text14
            on_press:
                app.root.current='start_screen'
            size_hint:1,None
            height:80
            font_size:25
            pos_hint:{'center_x':.5,'center_y':.5}
            font_name: 'Shoroq-Font.ttf'

        Image:
            id:myimage2
            pos:self.pos
            size:root.size
            source:'download.jfif'

        RelativeLayout:
            Button:
                text:root.bidi_text15
                on_press:root.read2()
                font_size:25
                size_hint:1,None
                height:50
                pos_hint:{'center_x':.5,'center_y':.9}
                font_name: 'Shoroq-Font.ttf'
            Button:
                text:root.bidi_text16
                on_press:root.read3()
                font_size:25
                size_hint:1,None
                height:50
                pos_hint:{'center_x':.5,'center_y':.6}
                font_name: 'Shoroq-Font.ttf'

            Button:
                text:root.bidi_text17
                on_press:root.read4()
                font_size:25
                size_hint:1,None
                height:50
                pos_hint:{'center_x':.5,'center_y':.3}
                font_name: 'Shoroq-Font.ttf'
            
            Button:
                text:root.bidi_text18
                on_press:root.read5()
                font_size:25
                size_hint:1,None
                height:40
                pos_hint:{'center_x':.5,'center_y':.1}
                font_name: 'Shoroq-Font.ttf'

            


<RootWidget>:
    StartScreen:
        name:'start_screen'
    MasbahaPage:
        name:'masbaha_page'
    Quranbook:
        name:'quran_book'
    SonaBookScfreen:
        name:'sona_book_screen'
